---
const response = await fetch(import.meta.env.SERVER + '/categories');
const categories = await response.json();
---
<div class="pt-4">
    <ul class="flex bg-cyan-700">
        {categories.map((item)=> (      
            <li class="cat-list"><a href={'/category/' + item.slug}>{item.name}</a></li>
        ))}
    </ul>    
</div>
<style >
    .cat-list a {
        @apply py-2 px-4 text-white ease-in-out text-center block hover:bg-colorC hover:text-gray-600;
    } 
</style>