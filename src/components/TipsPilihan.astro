---
import { Image } from "@astrojs/image/components";

const tips = [...Array(5)];
---

<div class="bg-gray-700 p-3 mt-4">
  <div class="text-center font-bold text-white py-1 border-b border-colorC">TIPS PILIHAN</div>
  {
    tips.map((item) => (
      <div class="flex space-x-2 py-3">
        <div class="w-1/3">
          <Image
            src="https://res.cloudinary.com/damatnwia/image/upload/v1679779384/blog/aplikasi-ar-ruler-660x330_rgwudg.jpg"
            width={660}
            height={330}
            format="jpg"
            aspectRatio="1:1"
            alt="Tips pilihan"
          />
        </div>
        <div class=" w-2/3">
          <a href="/tips" class="line-clamp-2 link-tips">
            Laborum et irure cupidatat eiusmod consectetur aliquip labore
            eiusmod veniam consequat nostrud occaecat.
          </a>
        </div>
      </div>
    ))
  }
</div>
<style>
  .link-tips {
    @apply font-bold text-colorA;
  }
  .link-tips:hover {
    @apply text-cyan-700;
  }
</style>
