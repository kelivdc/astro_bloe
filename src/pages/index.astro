---
import Main from "../layouts/Main.astro";
import { Image } from "@astrojs/image/components";
import Pilihan from "../components/Pilihan.astro";
import Headline from "../components/Headline.astro";
import Terbaru from "../components/Terbaru.astro";
---

<Main title="Berita otomotif terbaru">
  <div class="md:flex md:space-x-4">
    <div class="md:w-[65%]">
      <div class=" bg-colorD p-3">
        <Headline />
      </div>
      <div class="bg-gray-300 mt-4 border-t-[3px] border-colorA p-2">
        <div class="font-bold">INFO TERBARU</div>        
      </div>
      <Terbaru />
    </div>
    <div class="md:w-[35%] bg-colorD m-2 md:m-0 p-3 border-t-[3px] border-colorA">
      <Pilihan />
    </div>
  </div>
</Main>
