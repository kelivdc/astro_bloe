---
import { Image } from "@astrojs/image/components";
import Pilihan from "../../components/Pilihan.astro";
import TipsPilihan from "../../components/TipsPilihan.astro";
import Main from "../../layouts/Main.astro";
---

<Main title="5 Mobil">
  <div class="md:flex md:space-x-4">
    <div class="md:w-[70%] p-2 md:p-0">
      <div class="breadcrumb">
        <a href="/">HOME</a> / <a href="/c/mobil">MOBIL</a>
      </div>
      <div class="content">
        <h1 class="judul">
          5 Hewan Mamalia Purba dengan Wujud Paling Menyeramkan
        </h1>
        <Image
          src="https://res.cloudinary.com/damatnwia/image/upload/v1679586097/blog/8-aplikasi-jadwal-puasa-ramadhan-banyak-yang-gratisan-jja8uqhEim_lfd9km.jpg"
          alt="headline"
          aspectRatio="1:1"
          width={724}
          height={381}
          format="jpg"
        />
      </div>
    </div>
    <div class="md:w-[30%] m-2 md:m-0">
      <Pilihan />
      <TipsPilihan />
    </div>
  </div>
</Main>
<style>
  .breadcrumb {
    @apply border-b border-gray-300 pb-3 font-bold text-gray-500;
  }
  .breadcrumb a:hover {
    @apply text-cyan-700;
  }
  .judul {
    @apply md:text-3xl font-bold text-gray-700;
  }
  .content {
    @apply mt-4;
  }
</style>
